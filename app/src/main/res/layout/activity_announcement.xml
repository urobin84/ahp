<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/nameOfCreatorAnnouncement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name creator"
                android:textStyle="normal"
                android:textSize="14dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/dateCreatedAnnouncement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posted on 19 Nov 2019"
                android:textSize="12dp"
                android:textColor="@android:color/tertiary_text_light"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="(PENTING) Challenge Sheet 2019, Deadline Jumat 22 November 2019"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:textSize="14dp"
                android:textStyle="normal"
                android:text="@string/loremipsum"/>

        </LinearLayout>



    </ScrollView>
</LinearLayout>